{
    "manifest_version": 3,
    "name": "Davood numbeo calculator",
    "version": "1.0",
    "description": "calculates your custom costs that matches your personal lifestyle, based on the data in numbeo site.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "alarms" 
    ],
    "content_scripts": [
        {
            "matches": ["https://www.numbeo.com/cost-of-living/in/*"],
            "js": ["content.js"]
        }
    ]
}
